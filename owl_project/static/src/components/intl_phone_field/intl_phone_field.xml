<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="owl_project.Intl_phone_field" t-inherit="web.PhoneField" owl="1">
        <xpath expr="//input" position="after">
            <a
                t-if="props.record.data[props.name]" t-on-click="validate"
                target="_blank"
                class="o_phone_form_link ms-3 d-inline-flex align-items-center"
            >
                <i class="fa fa-phone"></i><small class="fw-bold ms-1">Validate</small>
            </a>
        </xpath>
        
    </t>
</templates>